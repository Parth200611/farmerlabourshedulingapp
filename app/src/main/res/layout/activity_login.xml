<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ImageView
        android:layout_width="800dp"
        android:layout_height="350dp"
        android:src="@drawable/applogo"
        android:id="@+id/ivloginapplogo"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/ivloginapplogo"
        android:layout_marginTop="-50sp"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textColor="#271611"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_to_unlock_new_opportunities"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number"
                android:textColor="#565656"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16sp"
                android:textSize="14dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etLoginNumber"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:inputType="number"
                android:background="@drawable/edittextback"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="#565656"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16sp"
                android:textSize="14dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etLoginPassword"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:inputType="textPassword"
                android:background="@drawable/edittextback"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/show_password"
                android:id="@+id/cbLoginShowpassword"
                android:backgroundTint="@color/lightbrown"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:id="@+id/btnLoginButton"
                android:background="#4CAF50"
                android:text="@string/log_in"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_user_click_here"
                android:textColor="@color/lightbrown"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16sp"
                android:id="@+id/tvLginNewUser"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_log_in_you_agree_to_our_private_policy"
                android:textColor="#767373"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16sp"

                android:textSize="12dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>